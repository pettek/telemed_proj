<h1>Add new exam</h1>

 <%= form_for @exam, html: { multipart: true }, url: {action: "create"} do |f| %>
 	  <%= f.label :activity %>
 	  <%= f.text_field :activity %>
 	  <%= f.label :patient %>
 	  <%= f.text_field :patient %>
 	  <%= f.label :srate %>
 	  <%= f.text_field :srate %>
 	  <%= f.label :date %>
 	  <%= f.text_field :date %>
      <%= f.label :attachment %>
      <%= f.file_field :attachment, multiple: true %>
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>

<%= link_to 'Back', {:action => 'list'} %>

 